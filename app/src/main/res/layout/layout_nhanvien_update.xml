<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"

    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Sửa thông tin"
        android:textColor="#2196F3"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtmnv_ud"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/nen_edittext"
        android:padding="5sp"
        android:hint="Nhập mã nhân viên"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/txtname_up"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/nen_edittext"
        android:padding="5sp"
        android:hint="Nhập tên nhân viên"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/txtpb_up"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/nen_edittext"
        android:padding="5sp"
        android:hint="phòng ban"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btnupd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="#CDDC39"
        android:text="Sửa"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:cornerRadius="0sp" />

</LinearLayout>